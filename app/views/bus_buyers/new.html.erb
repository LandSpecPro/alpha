<%- title "Add Your Company | LandSpec Pro" %>
<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <div class="login-container">

  <br/><br/><br/>

  <div class="row">
    <div class="position-relative">

      <div class="visible widget-box">
        <div class="widget-header header-color-green2">
          <h4 class="center">Buyer Information</h4>
        </div>

        <div class="widget-body">
          <div class="widget-main" id="login-widget-main">

            <%= form_for([@user, @busbuyer]) do |f| %>

                <% @busbuyer.errors.each do |field, msg| %>
                  <div class="alert alert-danger">
                    <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
                    <strong>Error! </strong> <%= msg %>
                  </div>
                <% end %>

                <fieldset>
                  <div class="form-group">
                    <!--[if lt IE 10]>Company Name/Institution (optional):<![endif]-->
                    <span class="block input-icon input-icon-right">
                      <%= f.text_field :busName, :class => 'form-control', :placeholder => "Company Name/Institution (optional)" %>
                      <i class="icon-briefcase"></i>
                    </span>
                  </div>

                  <div class="form-group">
                    <!--[if lt IE 10]>Phone Number:<![endif]-->
                    <span class="block input-icon input-icon-right">
                      <%= f.text_field :busPhone, :class => 'form-control input-mask-phone popover-phone', :placeholder => "Phone Number" %>
                      <i class="icon-phone"></i>
                    </span>
                  </div>

                  <div class="row">
                    <div class="col-xs-12">
                      <div class="pull-right">
                        <button type="submit" class="btn btn-success"><i class="icon-ok"></i> Submit</button>
                      </div>
                    </div>
                  </div>

                </fieldset>


            <% end %>

          </div> <!-- widget-main -->
        </div> <!-- widget-body -->
      </div> <!-- widget-box -->

    </div> <!-- position-relative -->
  </div> <!-- row-fluid -->
      </div> <!-- login-container -->
    </div> <!-- span12 -->
  </div> <!-- row-fluid -->
</div> <!-- container-fluid -->

<script type="text/javascript">
  $(applyMasks());
  $(applyPopovers());
</script>