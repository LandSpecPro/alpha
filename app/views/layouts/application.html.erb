<!DOCTYPE html>
<html>
<head>
  <title>LandSpec Pro</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar navbar-fixed-top navbar-inverse">
	  <div class="navbar-inner">
	    <div class="container">
	    	<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	    		<span class="icon-bar"></span>
	    		<span class="icon-bar"></span>
	    		<span class="icon-bar"></span>
	    	</button>
	    	<ul class="nav"><li>
	    		<a class="brand" href="#"><%= image_tag("brand-image.png", :id => "brand-image") %> LandSpec Pro</a>
	    	</li></ul>

	    	<div class="nav-collapse collapse">
	    		<ul class="nav pull-right">
	    			<% if current_user.nil? %>
	    				<li><%= link_to "Register", :controller => "users", :action => "new" %></li>
	    				<li><%= link_to "Login", :controller => "user_sessions", :action => "new" %></li>
	    			<% end %>
	    			<% if current_user %>
	    				<li class="dropdown">
	    					<a href="" class="dropdown-toggle" data-toggle="dropdown">
	    						<%= current_user.login %> <b class="caret"></b></a>
	    					<ul class="dropdown-menu">
	    						<li><%= link_to "Logout", logout_path %></li>
	    					</ul>
	    				</li>
	    			<% end %>

	    		</ul>
	    	</div>

	    </div>
	  </div>
	</div>

<%= yield %>

</body>
</html>