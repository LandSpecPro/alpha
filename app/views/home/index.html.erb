  <a class="right carousel-control" href="#carousel" data-slide="next">&rsaquo;</a>

  <!-- TEXT OVERLAY -->
  <div id="content-over-carousel">
    <div class="row">
      <div class="col-xs-12">
        <center>
          <h1 class="font-marmelad-white" id="carousel-header">Supply network <br/>for the landscape industry</h1>
        </center>
      </div>
    </div>
  </div><!-- content-over-carousel -->

</div><!-- /.carousel -->

<!-- Marketing messaging and featurettes
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class="container marketing">

  <div class="center">

    <!-- Three columns of text below the carousel -->
    <div class="row" style="margin-bottom: -10px;">
      <div class="col-md-4">
        <div class="">
          <h2 class="font-roboto-black">Landscape Suppliers</h2>
          <p class="font-roboto-black">Create your free LandSpec Pro profile today and drive awareness of your business in a truly engaging, attractive and powerful way.</p>
        </div>
      </div><!-- /.col-md-4 -->

      <div class="col-md-4">
        <div class="">
          <h2 class="font-roboto-black">Sign up for Free</h2>
          <p class="font-roboto-black">In the wholesale landscape ecosystem, it's all about relationships. Sign up today to grow new relationships and cultivate your existing ones.</p>
          <p><%= link_to "Register &raquo;".html_safe, register_url, :class => 'btn btn-success' %></p>
        </div>
      </div><!-- /.col-md-4 -->

      <div class="col-md-4">
        <div class="">
          <h2 class="font-roboto-black">Landscape Professionals</h2>
          <p class="font-roboto-black">Why limit yourself by not knowing what's out there right now? Sign up for LandSpec Pro today to find information about, and <i>real-time</i> updates from your favorite suppliers as well as new ones.</p>
        </div>
      </div><!-- /.col-md-4 -->

    </div><!-- /.row -->
    <br/><br/><br/><br/>

  </div>

</div><!-- /.container -->

