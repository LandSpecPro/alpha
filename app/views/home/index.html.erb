<%- title "LandSpec Pro" %>

<link href="stylesheets/index.css" rel="stylesheet">

<!-- Carousel
================================================== -->
<div id="carousel" class="carousel slide">

  <ol class="carousel-indicators">
    <li data-target="#carousel" data-slide-to="0" class="active"></li>
    <li data-target="#carousel" data-slide-to="1"></li>
    <li data-target="#carousel" data-slide-to="2"></li>
  </ol>

  <div class="carousel-inner">

    <div class="item active"> <!-- item one -->
      <img class="active" src="/images/slide_seven.png" alt="">

    </div>

    <div class="item"> <!-- item two -->
      <img src="/images/slide_five.png" alt="" />
      <!--<div class="carousel-caption">
        <p>My Nursery</p>
        <p><a href="http://www.google.com">Go To Google &raquo;</a></p>
      </div>-->
    </div>

    <div class="item"> <!-- item three -->
      <img src="/images/slide_six.png" alt="" />
    </div>

  </div>

  <a class="left carousel-control" href="#carousel" data-slide="prev">&lsaquo;</a>
  <a class="right carousel-control" href="#carousel" data-slide="next">&rsaquo;</a>

  <!-- TEXT OVERLAY -->
  <div id="content-over-carousel" class="container">
      <div class=""> <!-- center -->
        <div class="row">
          <div class="col-md-12">
            <div class="pull-right">
              <h1 class="font-marmelad-white" id="carousel-header">Supply network <br/>for the landscape industry</h1>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="pull-right">
                <h1 class="font-marmelad-white" id="carousel-newsletter-header">Sign up for the newsletter:<br/></h1>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="pull-right">
              
                <form id="newsletterForm" method="post" action="subscribe" class="form-inline" role="form">
                  <div class="form-group">
                    <input id="emailnewsletter" name="emailnewsletter" type="text" placeholder="Enter your email" style="width:auto;" class="form-control"><button id="carousel-newsletter-button" class="btn btn-small btn-success submit" type="submit">Subscribe &raquo;</button>
                  </div>
                </form>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">

          </div>
        </div>

      </div>
    </div><!-- content-over-carousel -->

</div><!-- /.carousel -->

<!-- Marketing messaging and featurettes
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class="container marketing">

  <div class="center">

    <!-- Three columns of text below the carousel -->
    <div class="row" style="margin-bottom: -10px;">
      <div class="col-md-4">
        <div class="">
          <h2 class="font-roboto-black">Landscape Suppliers</h2>
          <p class="font-roboto-black">Create your free basic LandSpec Pro profile today and begin showcasing your company info, featured products and inventories <i>in real-time</i> directly to the people who care about them most: your current and future buyers.</p>
        </div>
      </div><!-- /.col-md-4 -->

      <div class="col-md-4">
        <div class="">
          <h2 class="font-roboto-black">Join the Community</h2>
          <p class="font-roboto-black">Join now to be a part of the landscape industry's growing network of professional buyers and sellers.</p>
          <p><%= link_to "Register &raquo;".html_safe, register_url, :class => 'btn btn-success' %></p>
        </div>
      </div><!-- /.col-md-4 -->

      <div class="col-md-4">
        <div class="">
          <h2 class="font-roboto-black">Landscape Professionals</h2>
          <p class="font-roboto-black">You don't just make a landscape design, you create it. So why limit your creativity by not knowing what's out there right now? Sign up for LandSpec Pro today and discover <i>real-time</i> product information from your favorite suppliers as well as from new suppliers.</p>
        </div>
      </div><!-- /.col-md-4 -->

    </div><!-- /.row -->
    <br/><br/><br/><br/>
