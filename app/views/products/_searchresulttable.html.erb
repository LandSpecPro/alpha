<div class="table-header header-color-green">
	<%= @products.count %> Locations Found
</div>

<table id="table_report" class="table table-striped table-bordered table-hover">
	<thead>
		<tr>
			<th class="center">Company</th>
			<th class="center">Location Name</th>
			<th class="hidden-phone center">Address</th>
		</tr>
	</thead>
							
	<tbody>

		<% @products.each do |p| %>
		
			<tr>
				<td class="center">
					<%= p
				</td>
				<td class="center">
					<a href=<%= locations_view_url(:id => p.id) %>>
						<%= p.locName %>
					</a>
				</td>
				<td class='hidden-phone center'>
					<%= link_to p.get_full_address, get_map_link_from_address(concat_address(p)), :target => "_blank" %>
				</td>
			</tr>

		<% end %>

	</tbody>

</table>