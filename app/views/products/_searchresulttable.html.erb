<div class="table-header header-color-green">
	<%= @products.count %> Products Found 
</div>

<table id="table_report" class="table table-striped table-bordered table-hover">
	<thead>
		<tr>
			<th class="center">Common Name</th>
			<th class="center">Latin Name</th>
			<th class="center">Supplier</th>
			<th class="hidden-phone center">Size</th>
			<th class="hidden-phone center">Price</th>
			<th class="hidden-phone center">Description</th>
			<th class="hidden-phone center">Image</th>
		</tr>
	</thead>
							
	<tbody>

		<% @products.each do |p| %>
			<% FeaturedItem.where(:product_id => p.id).each do |fi| %>

				<% @fi_near.each do |finear| %>
					<% if fi.id == finear.id %>

						<tr>
							<td class="center">
								<%= p.commonName %>
							</td>
							<td class="center">
								<%= p.latinName %>
							</td>
							<td class="center">
								<a href=<%= locations_view_url(:id => fi.location_id) %>>
									<%= Location.find(fi.location_id).bus_vendor.busName %>
								</a>
							</td>
							<td class='hidden-phone center'>
								<%= fi.size %>
							</td>
							<td class='hidden-phone center'>
								<% if fi.price.to_s != '' %>
									<%= '$' + fi.price.to_s %>
								<% end %>
							</td>
							<td class='hidden-phone center'>
								<%= fi.description %>
							</td>
							<td class='hidden-phone center'>
								<%= link_to '<i class="icon-picture"></i>'.html_safe, ProductImage.find(fi.product_image_id).image.url(:original), :title => fi.description, :data => {:rel => "colorbox"} %>
							</td>
						</tr>


					<% end %>

				<% end %>
				
			<% end %>

		<% end %>

	</tbody>

</table>