<%= render 'layouts/sidebar' %>

<%= render 'search' %>

<div class="span8">

	<% if not @featureditems.nil? %>
		<% if @featureditems.count == 0 %>
			<div class="center"><br/>
				<h3>No products were found!</h3>
			</div>
		<% else %>
			<%= render 'searchresulttable' %>
		<% end %>
	<% else %>
		<div class="center"><br/>
			No results to display.
		</div>
	<% end %>
	
</div>

<%= render 'layouts/sidebarend' %>

<script type="text/javascript">

	$(applyChosenStyle());
	$(applyColorbox());
	$(applyPopovers());

</script>