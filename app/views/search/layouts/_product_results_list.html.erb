<div class="widget-box">

	<div class="widget-header header-color-green2">
		<% if params[:query].blank? %>
			<h5 class="lighter">Results - Page <%= params[:page] %> of <%= last_page_number %></h5>
		<% else %>
			<h5 class="lighter"><%= params[:result_count] %> Results for <%= params[:query] %></h5>
		<% end %>

		<div class="widget-toolbar">

			<div class="dropdown">
				<button class="btn btn-mini bigger btn-inverse dropdown-toggle" data-toggle="dropdown">
					<% if params[:per_page].to_i == 10 %>
						10 Per Page
					<% elsif params[:per_page].to_i == 15 %>
						15 Per Page
					<% elsif params[:per_page].to_i == 25 %>
						25 Per Page
					<% elsif params[:per_page].to_i == 50 %>
						50 Per Page
					<% else %>
						Results Per Page
					<% end %>
					<i class="icon-angle-down icon-on-right"></i>
				</button>

				<ul id="resultsPerPage" class="dropdown-menu dropdown-yellow pull-right dropdown-caret dropdown-close">
					<li>
						<a href="<%= per_page_url('product', '10') %>">
							<% if params[:per_page].to_i == 10 %><i class="icon-ok"></i><% end %>
							&nbsp;10 Per Page
						</a>
					</li>
					<li>
						<a href="<%= per_page_url('product', '15') %>">
							<% if params[:per_page].to_i == 15 %><i class="icon-ok"></i><% end %>
							&nbsp;15 Per Page
						</a>
					</li>
					<li>
						<a href="<%= per_page_url('product', '25') %>">
							<% if params[:per_page].to_i == 25 %><i class="icon-ok"></i><% end %>
							&nbsp;25 Per Page
						</a>
					</li>
					<li>
						<a href="<%= per_page_url('product', '50') %>">
							<% if params[:per_page].to_i == 50 %><i class="icon-ok"></i><% end %>
							&nbsp;50 Per Page
						</a>
					</li>
				</ul>
			</div>

			<div class="dropdown">
				<button class="btn btn-mini bigger btn-inverse dropdown-toggle" data-toggle="dropdown">
					<% if params[:sort] == 'dist_asc' %>
						Sort By - Distance Asc.
					<% elsif params[:sort] == 'dist_desc' %>
						Sort By - Distance Desc.
					<% elsif params[:sort] == 'name_asc' %>
						Sort By - Product Name Asc.
					<% elsif params[:sort] == 'name_desc' %>
						Sort By - Product Name Desc.
					<% elsif params[:sort] == 'busname_asc' %>
						Sort By - Business Name Asc.
					<% elsif params[:sort] == 'busname_desc' %>
						Sort By - Business Name Desc.
					<% elsif params[:sort] == 'price_asc' %>
						Sort By - Price Asc.
					<% elsif params[:sort] == 'price_desc' %>
						Sort By - Price Desc.
					<% elsif params[:sort] == 'size_asc' %>
						Sort By - Size Asc.
					<% elsif params[:sort] == 'size_desc' %>
						Sort By - Size Desc.
					<% else %>
						Sort By
					<% end %>
					<i class="icon-angle-down icon-on-right"></i>
				</button>

				<ul class="dropdown-menu dropdow-yellow pull-right dropdown-caret dropdown-close">
					<li>
						<a href="<%= sort_by_url('product', 'dist_asc') %>">
							<% if params[:sort] == 'dist_asc' %><i class="icon-ok"></i><% end %>
							&nbsp;Distance Asc.
						</a>
					</li>
					<li>
						<a href="<%= sort_by_url('product', 'dist_desc') %>">
							<% if params[:sort] == 'dist_desc' %><i class="icon-ok"></i><% end %>
							&nbsp;Distance Desc.
						</a>
					</li>
					<li>
						<a href="<%= sort_by_url('product', 'name_asc') %>">
							<% if params[:sort] == 'name_asc' %><i class="icon-ok"></i><% end %>
							&nbsp;Product Name Asc.
						</a>
					</li>
					<li>
						<a href="<%= sort_by_url('product', 'name_desc') %>">
							<% if params[:sort] == 'name_desc' %><i class="icon-ok"></i><% end %>
							&nbsp;Product Name Desc.
						</a>
					</li>
					<li>
						<a href="<%= sort_by_url('product', 'busname_asc') %>">
							<% if params[:sort] == 'busname_asc' %><i class="icon-ok"></i><% end %>
							&nbsp;Business Name Asc.
						</a>
					</li>
					<li>
						<a href="<%= sort_by_url('product', 'busname_desc') %>">
							<% if params[:sort] == 'busname_desc' %><i class="icon-ok"></i><% end %>
							&nbsp;Business Name Desc.
						</a>
					</li>
					<li>
						<a href="<%= sort_by_url('product', 'price_asc') %>">
							<% if params[:sort] == 'price_asc' %><i class="icon-ok"></i><% end %>
							&nbsp;Price Asc.
						</a>
					</li>
					<li>
						<a href="<%= sort_by_url('product', 'price_desc') %>">
							<% if params[:sort] == 'price_desc' %><i class="icon-ok"></i><% end %>
							&nbsp;Price Desc.
						</a>
					</li>
					<li>
						<a href="<%= sort_by_url('product', 'size_asc') %>">
							<% if params[:sort] == 'size_asc' %><i class="icon-ok"></i><% end %>
							&nbsp;Size Asc.
						</a>
					</li>
					<li>
						<a href="<%= sort_by_url('product', 'size_desc') %>">
							<% if params[:sort] == 'size_desc' %><i class="icon-ok"></i><% end %>
							&nbsp;Size Desc.
						</a>
					</li>
				</ul>
			</div>

		</div>
	</div>

	<div class="widget-body">
		<div class="widget-main no-padding">

			<% if last_page_number > 1 %>

				<div class="row-fluid">
					<%= render 'search/layouts/product_paginate_links' %>
				</div>

			<% end %>

			<table id="searchResultsProductList" class="table table-striped table-bordered table-hover">
				
				<thead>
					<tr>
						<th class="center">Product Name</th>
						<th class="center">Supplier</th>
						<th class="center">Distance Away (miles)</th>
						<th class="center">Size</th>
						<th class="center">Price</th>
						<th class="center">Favorite</th>
					</tr>
				</thead>

				<tbody>

					<% @featured_items.each do |fi| %>
						<tr>
							<td class="center">
								<%= fi.commonName %>
							</td>
							<td class="center">
								<a href="<%= locations_view_url(:id => fi.get_location.id) %>">
									<%= fi.busName %>
								</a>
							</td>
							<td class="center">
								<%= "%5.2f" % fi.distance_from(params[:location]).to_f %>
							</td>
							<td class="center">
								<%= fi.size %>
							</td>
							<td class="center">
								<% unless fi.price.blank? %>
									<%= '$%8.2f' % fi.price %>
								<% end %>
							</td>
							<td class="center">
								<% if fi.is_favorited(current_user) %>
									<a href=<%= products_favorite_set_url(:id => fi.id) %> title="" class="tooltip-info" data-rel="tooltip" data-original-title="Remove From Favorites" data-placement="bottom">
										<i  class="icon-bookmark" id="fav_icon"></i>
									</a>
								<% else %>
									<a href=<%= products_favorite_set_url(:id => fi.id) %> title="" class="tooltip-info" data-rel="tooltip" data-original-title="Add To Favorites" data-placement="bottom">
										<i  class="icon-bookmark-empty" id="fav_icon"></i>
									</a>
								<% end %>
							</td>
						</tr>
						
					<% end %>

				</tbody>

			</table>

		</div>
	</div>

</div>