<div class="center">

	<div class="pagination no-padding">
		<ul>

			<% if params[:page].to_i > 1 %>
				<li class="prev">
					<a href="<%= search_product_url(:page => (params[:page].to_i - 1), :per_page => params[:per_page], :query => params[:query], :view => params[:view], :current_location => params[:current_location], :distance_from => params[:distance_from], :location => params[:location], :sort => params[:sort]) %>"><i class="icon-double-angle-left"></i></a>
				</li>
			<% else %>
				<li class="prev disabled">
					<a><i class="icon-double-angle-left"></i></a>
				</li>
			<% end %>

			<!-- Show pages by individual number -->
			<% last_page_number.times do |p| %>

				<% if (p + 1) >= min_paginate_number and (p + 1) <= max_paginate_number %>

					<% if not (p + 1) == params[:page].to_i %>
						<li>
							<a href="<%= search_product_url(:page => (p + 1), :per_page => params[:per_page], :query => params[:query], :view => params[:view], :current_location => params[:current_location], :distance_from => params[:distance_from], :location => params[:location], :sort => params[:sort]) %>"><%= (p + 1).to_s %></a>
						</li>
					<% else %>
						<li class="active">
							<a><%= (p + 1).to_s %></a>
						</li>
					<% end %>

				<% end %>

			<% end %>


			<% if params[:page].to_i * params[:per_page].to_i < params[:result_count] %>
				<li>
					<a href="<%= search_product_url(:page => (params[:page].to_i + 1), :per_page => params[:per_page], :query => params[:query], :view => params[:view], :current_location => params[:current_location], :distance_from => params[:distance_from], :location => params[:location], :sort => params[:sort]) %>"><i class="icon-double-angle-right"></i></a>
				</li>
			<% else %>
				<li class="disabled">
					<a><i class="icon-double-angle-right"></i></a>
				</li>
			<% end %>

		</ul>
	</div>
	
</div>