<div class="block input-icon input-icon-right">
	<select id="query" name="query" class="chzn-select input-large span12" data-placeholder="Leave blank to search all suppliers...">
		<option selected="selected">Search All</option>

		<% FeaturedItem.where(:active => true).select('"commonName"').uniq.select(:location_id).order('"commonName" ASC').each do |fi| %>
			<% if fi.is_visible %>
				<option><%= fi.commonName %></option>
			<% end %>
		<% end %>
	</select>

</div>