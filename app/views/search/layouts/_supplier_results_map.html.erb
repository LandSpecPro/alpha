<% Location.all.each do |l| %>
	
	<% if l.is_cached_and_active %>
		<% @loc = Rails.cache.read('location_' + l.id.to_s) %>
		<%= @loc.busName + ' - id: ' + @loc.id.to_s + ' is cached' %>
	<% else %>
		<%= l.busName + ' - id: ' + l.id.to_s + ' is not cached!' %>
	<% end %>

	<br/>

<% end %>