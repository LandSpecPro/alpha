		<%= form_for user, :html => {:class => 'form-horizontal'} do |f| %>
		<%= f.error_messages %>
		<div class="control-group">
			<%= f.label "Username" %> <%= f.text_field :login %>
		</div>
		<br/><br/>
		<div class="control-group">
			<%= f.label "Email" %> <%= f.text_field :email %>
		</div>
		<br/><br/>
		<%= f.label "Password" %> <%= f.password_field :password %>
		<br/><br/>
		<%= f.label "Confirm Password" %> <%= f.password_field :password_confirmation %> <br/>
		<br/><br/>
		<%= f.radio_button :userType, STRING_VENDOR %> <%= f.label "Supplier" %>
		<%= f.radio_button :userType, STRING_BUYER %> <%= f.label "Buyer" %>
		<br/><br/>
		<%= f.submit "Submit" %>

	<% end %>