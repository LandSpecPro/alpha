<%- title "Claim Profile | LandSpec Pro" %>
<div class="row" style="margin-top:20px;">
	<div class="container">
		<div class="col-md-6">

			<%= form_for @user, :html => {:id => 'claimProfileForm'}, :url => profile_claim_create_url do |f| %>
				<div class="widget-box" style="min-width: 350px;">
					<div class="widget-header header-color-green2">
						<h5 class="bigger lighter"><i class="icon-home"></i> Claim Your Profile</h5>
					</div>

					<div class="widget-body">
						<div class="widget-main">

							<!-- Display error messages as alerts -->
							<% @user.errors.full_messages.each do |msg| %>
								<div class="alert alert-danger">
								  <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
								  <strong>Error! </strong> <%= msg %>
								</div>
							<% end %>

							<% if @confirmemail %>
								<div class="alert alert-danger">
									<button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
									<strong>Error! </strong> Email confirmation does not match!
								</div>
							<% end %>

							<fieldset>

								<%= f.hidden_field :claim_location_id, :value => @claimlocation.id %>

								<!--[if lt IE 10]>Username:<![endif]-->
								<span class="block input-icon input-icon-right">
									<%= f.text_field :login, :value => @userlogin, :class => 'form-control', :placeholder => "Username", :maxlength => '15', :html => {:id => 'login'} %>
									<i class="icon-user"></i>
								</span>
								<!--[if lt IE 10]>Email:<![endif]-->
								<span class="block input-icon input-icon-right">
									<%= f.text_field :email, :value => @useremail, :class => 'form-control', :placeholder => "Email" %>
									<i class="icon-envelope-alt"></i>
								</span>
								<!--[if lt IE 10]>Confirm Email:<![endif]-->
								<span class="block input-icon input-icon-right">
									<%= text_field_tag :email_confirmation, params[:email_confirmation], :class => 'form-control', :placeholder => "Confirm Email" %>
									<i class="icon-envelope-alt"></i>
								</span>
								<!--[if lt IE 10]>Password:<![endif]-->
								<span class="block input-icon input-icon-right">
									<%= f.password_field :password, :class => 'form-control', :placeholder => "Password" %>
									<i class="icon-lock"></i>
								</span>
								<!--[if lt IE 10]>Confirm Password:<![endif]-->
								<span class="block input-icon input-icon-right">
									<%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => "Confirm Password" %>
									<i class="icon-lock"></i>
								</span>

								<div class="row">
									<div class="col-xs-12">
										<div class="pull-right">
											<button type="submit" class="btn btn-success"><i class="icon-key"></i> Claim Profile</button>
										</div>
									</div>
								</div>

							</fieldset>

						</div>
					</div>

				</div>

			<% end %>

		</div>

		<div class="col-md-6">

			<div class="center">
				<h2>Location Information</h2>
				<address>
					<strong><%= @claimlocation.bus_name %></strong>

					<br/>
					<%= @claimlocation.loc_address1 %>
					<%= 
						unless @claimlocation.loc_address2.blank?
							", " + @claimlocation.loc_address2
						end
					%>
					<br/>
					<%= @claimlocation.loc_city + ", " + @claimlocation.loc_state + " " + @claimlocation.loc_zip %>
					<br/>
					<abbr title="Phone" class="popover-phone">P:</abbr> <%= @claimlocation.loc_phone %>
				</address>
			</div>

			<p style="margin-left:15px; margin-right:15px;">If the above information is wrong in any way you will have the opportunity to update it after claiming your profile. All you need to do is confirm your email and enter a password. Feel free to use a different email or a different username also, and remember you can change any information later after you have claimed your profile.</p>

		</div>

	</div>
</div>

<%= render 'layouts/footer' %>

<script type="text/javascript">
	$(applyPopovers());
</script>