<%= form_for @user, :html => {:id => 'claimProfileForm'}, :url => profile_claim_create_url do |f| %>

	<!-- Display error messages as alerts -->
	<% @user.errors.full_messages.each do |msg| %>
		<div class="alert alert-error">
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		  <strong>Error! </strong> <%= msg %>
		</div>
	<% end %>

	<fieldset>

		<%= f.hidden_field :claim_location_id, :value => @claimlocation.id %>

		<!--[if lt IE 10]>Username:<![endif]-->
		<span class="block input-icon input-icon-right">
			<%= f.text_field :login, :value => @claimlocation.user_login, :class => 'span12', :placeholder => "Username", :maxlength => '15', :html => {:id => 'login'} %>
			<i class="icon-user"></i>
		</span>
		<!--[if lt IE 10]>Email:<![endif]-->
		<span class="block input-icon input-icon-right">
			<%= f.text_field :email, :value => @claimlocation.user_email, :class => 'span12', :placeholder => "Email" %>
			<i class="icon-envelope-alt"></i>
		</span>
		<!--[if lt IE 10]>Confirm Email:<![endif]-->
		<span class="block input-icon input-icon-right">
			<%= text_field_tag :email_confirmation, params[:email_confirmation], :class => 'span12', :placeholder => "Confirm Email" %>
			<i class="icon-envelope-alt"></i>
		</span>
		<!--[if lt IE 10]>Password:<![endif]-->
		<span class="block input-icon input-icon-right">
			<%= f.password_field :password, :class => 'span12', :placeholder => "Password" %>
			<i class="icon-lock"></i>
		</span>
		<!--[if lt IE 10]>Confirm Password:<![endif]-->
		<span class="block input-icon input-icon-right">
			<%= f.password_field :password_confirmation, :class => 'span12', :placeholder => "Confirm Password" %>
			<i class="icon-lock"></i>
		</span>

		<div class="row-fluid">
			<div class="pull-right">
				<button type="submit" class="btn btn-success"><i class="icon-key"></i> Claim Profile</button>
			</div>
		</div>

	</fieldset>


<% end %>