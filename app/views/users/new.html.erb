<div id="register-container" class="container">
	<h1>Register</h1>

		<%= form_for @user do |f| %>
		<%= f.error_messages %>
		<%= f.label "Username" %> <%= f.text_field :login %>
		<%= f.label "Email" %> <%= f.text_field :email %>
		<%= f.label "Password" %> <%= f.password_field :password %>
		<%= f.label "Confirm Password" %> <%= f.password_field :password_confirmation %> <br/>
		<%= f.submit "Submit" %>

	<% end %>
</div>