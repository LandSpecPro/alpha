<%= form_for @location, :url => {:action => :update_bio}, :html => {:id => 'form_location_bio'} do |f| %>

	<div class="widget-box">
		<div class="widget-header header-color-green2">
			<h5 class="bigger lighter"><i class="icon-pencil"></i> Update Bio</h5>
			<div class="widget-toolbar">
				<a href="javascript:{return true;}" onclick="document.getElementById('form_location_bio').submit();" class="white" id="white-link"><i  class="icon-save"></i> Update</a>
			</div>
		</div>

		<div class="widget-body">

			<div class="widget-main">

				<fieldset>

					<%= hidden_field_tag(:id,  @location.id) %>

						<h4>Location Biography:</h4>
						<div class="block input-icon input-icon-right">

							<%= text_area_tag :bio, @location.bio, :class => 'span12', :style => 'resize: none;', :rows => '4' %>
							
						</div>

				</fieldset>

			</div>
		</div>

	</div>

<% end %>