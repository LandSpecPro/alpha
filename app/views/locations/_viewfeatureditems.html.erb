
	
<ul class="ace-thumbnails">
	<% @location.featured_items.where(:active => true).each do |fi| %>
					
		<div class="span4">

			<div class="widget-box">
				<div class="widget-header header-color-green">
					<h5 class="bigger lighter"><i class="icon-star"></i> <strong><%= fi.get_product.commonName %></strong></h5>
					<div class="widget-toolbar">
						<% if fi.is_favorited(current_user) %>
							<a title="Remove from favorites" href=<%= products_favorite_set_url(:id => fi.id) %>><i  class="icon-bookmark white" id="fav_icon"></i></a>
						<% else %>
							<a title="Add to favorites"  href=<%= products_favorite_set_url(:id => fi.id) %>><i  class="icon-bookmark-empty white" id="fav_icon"></i></a>
						<% end %>
					</div>
				</div>
			</div>

			<ul class="ace-thumbnails">
				<div class="center">
				<li>
					<%= image_tag fi.get_image.url %>
					<div class="tags">
						<span class="label label-info arrowed">fountain</span>
						<span class="label label-important">recreation</span>
					</div>
				</li>
			</div>

			</ul>

			
		</div>

	<% end %>
</ul>