

	<% @location.featured_items.where(:active => true).each do |fi| %>
					
		<div class="row-fluid">
			<div class="span5">
				<br/>
				<ul class="ace-thumbnails">
					<li>

							
						<a href="<%= fi.get_image.url(:original) %>" title="<%= fi.get_product.commonName %>" data-rel="colorbox">
						
							<img src="<%= fi.get_image.url %>"/>

							<% if fi.is_favorited(current_user) %>
								<div class="tags">
									<span class="label label-info arrowed">Favorited!</span>
								</div>
							<% end %>


						</a>



						<div class="tools tools-top">
							<% if fi.is_favorited(current_user) %>
								<a title="Remove from favorites" href=<%= products_favorite_set_url(:id => fi.id) %>><i  class="icon-bookmark" id="fav_icon"></i></a>
							<% else %>
								<a title="Add to favorites"  href=<%= products_favorite_set_url(:id => fi.id) %>><i  class="icon-bookmark-empty" id="fav_icon"></i>
								</a>
							<% end %>
						</div>


					</li>
				</ul>
			</div>

			<div class="span6">
				<br/>
				<strong>Common Name:</strong>
				<br/>
				<%= fi.get_product.commonName %>
				<br/>
				<% unless fi.get_product.latinName.blank? %>
					<strong>Latin Name:</strong>
					<br/>
					<%= fi.get_product.latinName %>
					<br/>
				<% end %>
				<% unless fi.description.blank? %>
					<strong>Description:</strong>
					<%= fi.description %>
					<br/>
				<% end %>
				<% unless fi.price.blank? %>
					<strong>Price:</strong>
					<br/>
					<%= '$' + fi.price.to_s %>
					<br/>
				<% end %>
				<% unless fi.size.blank? %>
					<strong>Size:</strong>
					<br/>
					<%= fi.size %>
					<br/>
				<% end %>
			</div>
		</div>
		

	<% end %>