<% if @location.featured_items.where(:active => true).count == 0 %>

	<div class="center">
		<h4>You have no featured items for this location. You can add up to 3. For more information, add link here.</h4><br/>
	</div>

<% else %>

	<% @location.featured_items.where(:active => true).order("created_at ASC").each do |fi| %>
		<%= form_for :featured_items, :url => {:action => :update_featured_item}, :html => {:id => fi.id.to_s} do |f| %>
			<div class="widget-box">
				<div class="widget-header header-color-green2">
					<h5 class="bigger lighter"><i class="icon-star"></i> <%= fi.get_product.commonName %></h5>
					<div class="widget-toolbar">
						<a href="javascript:{return true;}" onclick="document.getElementById('<%= fi.id.to_s %>').submit();" title="Update" class="white" id="white-link">
							<i class="icon-save" id="save_icon"></i>
						</a>
						<a href=<%= locations_featureditem_delete_url(:featured_item_id => fi.id, :location_id => fi.location_id) %> title="Delete" class="white" id="white-link">
							<i class="icon-trash" id="delete_icon"></i>
						</a>
					</div>
				</div>
				<div class="widget-body">

					<div class="widget-main">
						
						
						<div class="row-fluid">
							<div class="span12">
								<div class="center">

									<a href=<%= fi.get_image.url(:original) %> data-rel="colorbox">
										<img src=<%= fi.get_image.url(:thumb) %>/>
									</a>

								</div>
							</div>
						</div>

						<fieldset>

							<%= hidden_field_tag(:id,  fi.id) %>

							<br/>

							<div class="center">
								Product Categories:
								<div class="block input-icon input-icon-right">
									<%= select_tag "featured_item_categories" + fi.id.to_s, options_from_collection_for_select(Category.where(:active => true), 'id', 'category', :selected => fi.get_category_ids), :multiple => true, :class => 'chzn-select', :data => {:placeholder => "No Categories Selected"} %>
								</div>
							</div>

							<br/>

							Description:
							<div class="block input-icon input-icon-right">
								<%= f.text_area :description, :class => 'span12', :id => 'description', :value => fi.description, :rows => '3', :style => 'resize: none;' %>
							</div>

							<div class="row-fluid">
								<div class="span6">
									Size:
									<div class="block input-icon input-icon-right">
										<%= f.text_field :size, :class => 'span12', :id => 'size', :value => fi.size %>
									</div>
								</div>
								<div class="span2 offset1">
									Price:
									<div class="block  input-prepend">
										
										
											<span class="add-on"><i class="icon-money"></i></span>
											<!--<span class="add-on"><p style="font-size:25px;">$</p></span>-->
											<%= f.text_field :price, :class => 'span12 input-mask-price', :id => 'price', :value => fi.price %>
										
									</div>
								</div>
							</div>

							Image: 
							<div class="block input-icon input-icon-right">
								<%= f.file_field :image, :class => 'span12', :id => 'image' %>
							</div>

						</fieldset>

					</div>

				</div>

				

			</div>
			<br/>

		<% end %>

	<% end %>
<% end %>