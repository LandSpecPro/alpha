<script type="text/javascript">

	window.onbeforeunload = checkFormSubmissions;

	function checkFormSubmissions(){
		// 'loc_info' = Location Information
		// 'loc_about' = About Section
		// 'loc_cats' = Categories
		// 'loc_fi' = Featured Items
		// 'loc_profile' = Profile Settings
		// 'loc_inventory' = New Inventory
		// 'loc_multiple' = Multiple Fields Changed
		if (form_change == 'loc_info')
			return "You have unsaved changes to your location information!";
		else if (form_change == 'loc_about')
			return "You have unsaved changes to your About section!";
		else if (form_change == 'loc_cats')
			return "You have unsaved categories for this location!";
		else if (form_change == 'loc_fi')
			return "You have an unsaved featured item for this location!";
		else if (form_change == 'loc_profile')
			return "You have unsaved changes to your public profile settings!";
		else if (form_change == 'loc_profile_url')
			return "You have not saved your changes to your profile URL!";
		else if (form_change == 'loc_inventory')
			return "You have an unsaved inventory item for this location!";
		else if (form_change == 'loc_multiple')
			return "There are multiple unsaved changes to this location!";
	};

	$(applyChosenStyle());
	$(applyMasks());
	$(applyColorbox());	
	$(applyPopovers());

	// Success messages
	<% if params[:update_settings_url_success] %>
		$(showUpdateSuccessGritter('Public Profile URL has been updated.'));
	<% elsif params[:update_settings_success] %>
		$(showUpdateSuccessGritter('Public Profile Settings have been updated.'));
	<% elsif params[:update_about_success] %>
		$(showUpdateSuccessGritter('Location About Section has been updated.'));
	<% elsif params[:update_categories_success] %>
		$(showUpdateSuccessGritter('Your Categories for this Location have been updated.'));
	<% elsif params[:add_featured_item_success] %>
		$(showUpdateSuccessGritter('Your Featured Item was added to this location.'));
	<% elsif params[:update_location_info_success] %>
		$(showUpdateSuccessGritter('Location Information has been updated.'));
	<% elsif params[:add_new_inventory_success] %>
		$(showUpdateSuccessGritter('New Inventory added successfully.'));
	<% end %>

	// Cookies for popovers
	<% if not cookies.signed[:new_tab_addons] %>
		$('#tab_addons').popover({
			html: true,
			placement: "bottom",
			container: "body",
			title: '<span class="text-info"><strong>Brand New Inventory!</strong></span>',
			content: "You can now "
		});

		$('#tab_addons').popover('show');


		<% cookies.permanent.signed[:new_tab_addons] = true %>
	<% end %>

	var form_change = null;

	function showRevertChanges(){
		$('#revertChanges').fadeIn(500);
	}

