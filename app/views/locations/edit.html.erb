<%= render 'layouts/sidebar' %>

	<div class="row-fluid">

		<div class="span12">
			<div class="tabbable tabs-left">
				<ul class="nav nav-tabs" id="locEditTabs">
				  <li class="active"><a data-toggle="tab" href="#locationInfo"><i class="blue icon-globe bigger-110"></i> Location Info</a></li>
				  <li><a data-toggle="tab" href="#featuredItems"><i class="red icon-star bigger-110"></i> Featured Items</a></li>
				  <li><a data-toggle="tab" href="#additionalInfo"><i class="pink icon-info-sign bigger-110"></i> Additional Info</a></li>
				</ul>
				<div class="tab-content">

				  <div id="locationInfo" class="tab-pane in active">
				  	<div class="row-fluid">
				  		<div class="span6">
							<%= render 'formupdatelocationinfo' %>
						</div>
					</div>
				  </div>

				  <div id="featuredItems" class="tab-pane">
					<div class="row-fluid">
						<% if @location.featured_items.where(:active => true).count < 3 %>
							<div class="span4">
								<%= render 'formeditfeatureditem' %>
							</div>
							<div class="span8">
								<%= render 'formaddfeatureditem' %>
							</div>
						<% else %>
							<div class="span6">
								<%= render 'formeditfeatureditem' %>
							</div>
						<% end %>
					</div>
				  </div>

				  <div id="additionalInfo" class="tab-pane">
				  	<div class="row-fluid">
				  		<div class="span4">
							<%= render 'formupdatecategories' %>
						</div>
						<div class="span4">
							<%= render 'formupdatestatus' %>
						</div>
						<!-- UPDATE BIO, STATUS, CATEGORIES, LOGO?, ETC. FROM HERE -->
					</div>
				  </div>

				</div>
			</div>
		</div>

		


		

	</div>

<%= render 'layouts/sidebarend' %>

<script type="text/javascript">

	$(applyChosenStyle());
	$(applyMasks());
	$(applyColorbox());	

</script>