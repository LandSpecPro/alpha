<% unless @location.categories.count == 0 %>
	<div class="widget-box transparent">
		<div class="widget-header widget-header-large">
			<h2 class="smaller">
				<i class="icon-tasks bigger-110"></i>
				Product Categories
			</h2>

			<!--<div class="widget-toolbar"> Save this for when I can let the user edit the products from here
				<i class="icon-pencil"></i>
			</div>-->
		</div>

		<div class="widget-body">
			<div class="widget-main">
				<% @location.categories.order('hierarchy_level ASC, cat_name ASC').each do |cat| %>
					<% if cat.is_descendant_of("Materials") %>
						<span class="label label-large label-warning" style="font-size:20px; padding:8px; margin:5px;">
					<% elsif cat.is_descendant_of("Plants") %>
						<span class="label label-large label-success" style="font-size:20px; padding:8px; margin:5px;">
					<% else %>
						<span class="label label-large label-inverse" style="font-size:20px; padding:8px; margin:5px;">
					<% end %>
						<%= cat.cat_name %>
					</span>
				<% end %>
			</div>
		</div>
	</div>
<% end %>