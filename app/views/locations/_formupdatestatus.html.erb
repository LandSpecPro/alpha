<%= form_for :statuses, :url => {:action => :update_status}, :html => {:id => 'form_update_location_status'} do %>

	<div class="widget-box">
		<div class="widget-header header-color-green">
			<h5 class="bigger lighter"><i class="icon-pencil"></i> Current Status</h5>
			<div class="widget-toolbar">
				<a href="javascript:{return true;}" onclick="document.getElementById('form_update_location_status').submit();" class="white" id="white-link"><i  class="icon-save"></i> Update</a>
			</div>
		</div>

		<div class="widget-body">

			<div class="widget-main">

				<fieldset>

					<%= hidden_field_tag(:id,  @location.id) %>

						<h4>New Status:</h4>
						<div class="block input-icon input-icon-right">

							<%= text_area_tag :status, @currentstatusstring, :class => 'span12', :style => 'resize: none;', :rows => '4' %>
							
						</div>

				</fieldset>

			</div>
		</div>

	</div>

<% end %>