<!-- GUESTCODE -->
<%- title @location.busName + " | LandSpec Pro" %>
<%= render 'layouts/sidebar' %>

<div>
	<div id="user-profile-1" class="user-profile row">
		<div class="col-lg-4 col-xs-12 center">
			<div>
				
				<%= render 'locations/layouts_view/profileimage' %>

				<div class="space-4"></div>

				<%= render 'locations/layouts_view/sociallinks' %>

				<div class="space-10"></div>

				<% if Follow.is_user_following(current_user.id, params[:id]) %>
					<center>
						<div class="alert alert-success" style="padding-top:5px; padding-bottom:5px; width:75%;">
							<strong><i class="icon-ok icon-large"></i> You are currently following this location</strong>
						</div>
					</center>
				<% end %>

				<div class="width-90 label label-info label-large arrowed-in arrowed-in-right">
					<div class="inline position-relative">
							<span class="white middle bigger-120"><%= @location.busName %></span>
					</div>
				</div>

			</div>

			<%= render 'locations/layouts_view/tagline' %>

			<%= render 'locations/layouts_view/profilelinks' %>

			<div class="space-6"></div>

			<%= render 'locations/layouts_view/contactinfo' %>

			<div class="space-16"></div>

			<%= render 'locations/layouts_view/categories' %>

		</div>

		<div class="col-lg-8 col-xs-12">
			<% if not @location.active and current_user.id != 999 %>
				<div class="alert alert-danger">
					<strong>Warning! </strong> This location is currently incative and only visible to you. Your information will not be visible to the public until your account has been approved. This should happen within a few hours of your initial registration. If you feel that we're taking too long to approve your account please contact us at <a href="mailto:tech@landspecpro.com">tech@landspecpro.com</a>.
				</div>
			<% end %>

			<%= render 'locations/layouts_view/bioinfo' %>

			<% unless FeaturedItem.where(:location_id => @location.id, :active => true).count == 0  and not @location.is_owner(current_user) %>
				<%= render 'locations/layouts_view/featureditems' %>		
			<% end %>
			
		</div>
	</div>
</div>
<%= render 'layouts/sidebarend' %>

<script type="text/javascript">

	$(applyColorbox());
	$(applyPopovers());

</script>