<div class="widget-box">
	<% if @location.active %>
		<div class="widget-header header-color-green2">
			<h5 class="bigger lighter"><i class="icon-off"></i> Deactivate Location</h5>
		</div>
	<% else %>
		<div class="widget-header header-color-red2">
			<h5 class="bigger lighter"><i class="icon-off"></i> Activate Location</h5>
		</div>
	<% end %>


	<div class="widget-body">

		<div class="widget-main">

			<div class="row-fluid">

				<div class="span12">

					<div class="center">
						<% if @location.active %>
							<a href="<%= locations_deactivate_url(:id => @location.id) %>">
								<button class="btn btn-danger">Deactivate</button>
							</a>
						<% else %>
							<a href="<%= locations_activate_url(:id => @location.id) %>">
								<button class="btn btn-danger">Activate</button>
							</a>
						<% end %>
					</div>

				</div>
			</div>

			<br/>

			<div class="row-fluid">

				<div class="span12">
					<% if @location.active %>
						<p class="center">Location is currently active. By deactivating this location your featured items and location information will only be visible to you.</p>
					<% else %>
						<p class="center">Location is currently inactive. Until activated none of your information or featured items will be visible to anyone but yourself.</p>
					<% end %>

				</div>

			</div>

		</div>
	</div>

</div>