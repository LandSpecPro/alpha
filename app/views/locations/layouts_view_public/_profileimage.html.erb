<span class="profile-picture">
	<ul class="ace-thumbnails">
		<li>
			<span>
				<% if @locsettings.show_company_logo %>
					<%= image_tag UserDetail.find(@location.user_detail_id).logo.url(:medium), :max_width => '300px', :max_height => '300px', :title => 'Logo', :id => 'avatar', :style => 'max-height:100%; max-width:100%; display:block; margin:auto;' %>
				<% else %>
					<img src="/images/default/logos_large.png" width='300px' height='300px' title='Logo' id='avatar'/>
				<% end %>
			</span>
		</li>
	</ul>
</span>