<%= form_for @location, :url => {:action => :update_bio, :controller => :locations}, :html => {:id => 'form_location_bio'} do |f| %>

	<div class="widget-box">
		<div class="widget-header header-color-green2">
			<h5 class="bigger lighter"><i class="icon-pencil"></i> About Location</h5>
			<div class="widget-toolbar">
				<a href="javascript:{return true;}" onclick="submitLocationAboutForm();" class="white" id="white-link"><i  class="icon-save"></i> Update</a>
			</div>
		</div>

		<div class="widget-body">

			<div class="widget-main">

				<fieldset>

					<%= hidden_field_tag(:id,  @location.id) %>

						<h4>About Location:</h4>
						<div class="block input-icon input-icon-right">

							<div class="form-group">
								<%= text_area_tag :bio, @location.bio, :class => 'form-control loc_about_field', :style => 'resize: none;', :rows => '15' %>
							</div>

						</div>

				</fieldset>

			</div>
		</div>

	</div>

<% end %>

<script type="text/javascript">

	function submitLocationAboutForm(){

		if (form_change == 'loc_about')
			form_change = null;

		document.getElementById('form_location_bio').submit();

	}

	$('.loc_about_field').change(function changeAboutInfo(){
		if (form_change == null || form_change == 'loc_about'){
			form_change = 'loc_about';
		}
		else{
			form_change = 'loc_multiple';
		}

		$(this).css( "border-color", "orange");

		showRevertChanges();
	});

</script>