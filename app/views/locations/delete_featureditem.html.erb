<%= render 'layouts/sidebar' %>

<div class="container">
	<div class="row-fluid">
		<div class="span4 offset4">

			<div class="widget-box">
				<div class="widget-header header-color-blue">
					<h5 class="bigger lighter"><i class="icon-star"></i> <%= FeaturedItem.find(params[:featured_item_id]).get_product.commonName %></h5>
				</div>
				<div class="widget-body">

					<div class="widget-main center">
						<div><%= image_tag FeaturedItem.find(params[:featured_item_id]).get_image.url(:thumb) %>
						
							<h4>Description:</h4>
							<%= FeaturedItem.find(params[:featured_item_id]).description %>
						</div>
					</div>

				</div>

			</div>
		</div>

	</div>
	<div class="center">

		<h2>Are you sure you want to delete this item from this location?</h2>
		<h6><i>(This will permanently delete this featured item, but the product will remain in the system.)</i></h6>
		<%= link_to "Yes", locations_featureditem_delete_confirm_url(:featured_item_id => params[:featured_item_id], :location_id => params[:location_id]), :class => 'btn btn-primary' %>
		<%= link_to "No", locations_manage_url, :class => 'btn btn-primary' %>
	</div>
</div>

<%= render 'layouts/sidebarend' %>