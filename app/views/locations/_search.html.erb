<div class="span3">
	<div style="width:300px;">

	<div class="widget-box">
		<div class="widget-header">
			<h5 class="bigger lighter"><i class="icon-search"></i> Search Options</h5>
		</div>

		<div class="widget-body">

			<div class="widget-main">

	<br/>
	<%= form_tag locations_search_path, :method => 'get' do %>
		<div class="center">
			<span class="input-icon input-icon-right">
				<%= text_field_tag :search, params[:search], :class => 'input-large search-query', :placeholder => 'Search by name...' %>
				<p style="font-size:12px;">Leave blank to search all suppliers.</p>
				<!--<i id="nav-search-icon" class="icon-search"></i>-->
			</span><hr/>
			
			<span class="block input-icon">
				<label for="distance_from">Distance Away: </label>
				<select id='distance_from' name='distance_from' class="input-large chzn-select" data-placeholder="Any">
					<option value='0' <% if params[:distance_from] == 0 %>selected="selected"<% end %>>Any</option>
					<option value='5' <% if params[:distance_from] == 5 %>selected="selected"<% end %>>5 Miles</option>
					<option value='10'>10 Miles</option>
					<option value='15'>15 Miles</option>
					<option value='20'>20 Miles</option>
					<option value='25'>25 Miles</option>
					<option value='50'>50 Miles</option>
					<option value='100'>100 Miles</option>
					<option value='150'>150 Miles</option>
	  			</select>
			</span>
			<br/>
<!--
			<span class="block input-icon">

				<label class="checkbox">
					<input id="location_auto" name="location_auto" type="checkbox" value="true" <% if params[:location_auto] %>checked="checked" <% end %>/><span class="lbl"> Use Current Location</span>
				</label>
			</span>
			<br/>
-->
			<span class="block input-icon">
				<label for="category">Category: </label>
				<select multiple id='category' name='category' class="input-large chzn-select" data-placeholder="Product Categories">
					<option>Tree</option>
					<option>Shrub</option>
					<option>Rock</option>
					<option>Soil</option>
					<option>Irrigation Supplies</option>
					<option>These are just placeholders</option>
	  			</select>
			</span>
			<br/>
			<div class="widget-footer">
				<%= submit_tag "Search", :class => "btn btn-block btn-success btn-small" %>
			</div>
		</div>
		
	<% end %>

</div></div></div>

</div></div>