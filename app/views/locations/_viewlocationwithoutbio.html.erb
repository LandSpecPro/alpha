<div class="row-fluid">
	<div class="span12">
		<div class="widget-box">
			<div class="widget-header header-color-green2">
				<div class="center">
					<h3 class="lighter header-font-white"><%= @location.bus_vendor.busName %></h3>
				</div>
			</div>
		</div>
	</div>
</div>


<div class="row-fluid">
	<% unless @location.bus_vendor.tagline.blank? %>
		<center>
			<span style="font-size:15px; font-weight:bold;"><%= "\"" + @location.bus_vendor.tagline + "\"" %></span>
		</center>
	<% end %>
</div>
<div class="row-fluid">

		<table class="span12" style="width:100%;">
			<colgroup>
				<col span="1" style="width:40%;">
				<col span="1" style="width:60%;">
			</colgroup>
			<tr>
				<th valign="top">
					<%= image_tag @location.bus_vendor.logo.url(:medium), :title => 'Logo', :width => '300px', :height => '300px' %>
				</th>
				<th valign="top">
					<table style="table-layout: fixed; width: 100%; font-weight:normal;" valign="top">

						<colgroup>
							<col span="1" style="width:40%">
							<col span="1" style="width:60%">
						</colgroup>

						<br/>
						<tr valign="top">
							<td style="text-align:center; margin-right:15px;" colspan="2" valign="top">
								<h3 style="width:100%; color:#fff; background-color:#2e893f;">Contact Info</h3>
							</td>
						</tr>
						<tr>
							<td style="text-align:right; font-weight:bold;" valign="top">Address:&nbsp;</td>

							<td style="text-align:left;">

				<a href="<%= get_map_link_from_address(concat_address(@location)) %>" target="_blank" title="<%= @location.get_full_address %>" title="View Map">
					<%= @location.address1 %><br/>
					<% unless @location.address2.blank? %>
						<%= @location.address2 %><br/>
					<% end %>
					<%= @location.city + ", " + @location.state + " " + @location.zip %>
				</a>
							</td>
				
						</tr>
					<% unless @location.primaryPhone.blank? %>
						<tr>
							<td style="text-align:right; font-weight:bold;" valign="top">Phone:&nbsp;</td>
							<td style="text-align:left;"><%= @location.primaryPhone %></td>
						</tr>
					<% end %>
					<% unless @location.secondaryPhone.blank? %>
						<tr>
							<td style="text-align:right; font-weight:bold;" valign="top">Alt. Phone:&nbsp;</td>
							<td style="text-align:left;"><%= @location.secondaryPhone %></td>
						</tr>
					<% end %>
					<% unless @location.fax.blank? %>
						<tr>
							<td style="text-align:right; font-weight:bold;" valign="top">Fax:&nbsp;</td>
							<td style="text-align:left;"><%= @location.fax %></td>
							
						</tr>
					<% end %>
					<% unless @location.primaryEmail.blank? %>
						<tr>
							<td style="text-align:right; font-weight:bold;" valign="top">Email:&nbsp;</td>
							<td style="text-align:left; word-wrap: break-word;"><%= @location.primaryEmail %></td>
						</tr>
					<% end %>
					<% unless @location.secondaryEmail.blank? %>
						<tr>
							<td style="text-align:right; font-weight:bold;" valign="top">Alt. Email:&nbsp;</td>
							<td style="text-align:left; word-wrap: break-word;"><%= @location.secondaryEmail %></td>
						</tr>
					<% end %>
					<% unless @location.websiteLink.blank? %>
						<tr>
							<td style="text-align:right; font-weight:bold;" valign="top">Website:&nbsp;</td>
							<td style="text-align:left; word-wrap: break-word;">
								<a href="<%= @location.websiteLink %>" target="_blank">
									Click Here
								</a>
							</td>
						</tr>
					<% end %>
						<tr>
							<td class="center" colspan="2" style="padding-top:15px;">
								<% unless @location.facebookLink.blank? %>

									<a href="<%= @location.facebookLink %>" target="_blank" title="Facebook">
										<%= image_tag("fb.png", :id => "brand-image") %>
									</a>

								<% end %>
								<% unless @location.twitterLink.blank? %>

									<a href="<%= @location.twitterLink %>" target="_blank" title="Twitter">
										<%= image_tag("twitter.png", :id => "brand-image") %>
									</a>

								<% end %>
								<% unless @location.googleLink.blank? %>

									<a href="<%= @location.googleLink %>" target="_blank" title="Google+">
										<%= image_tag("gplus.png", :id => "brand-image") %>
									</a>

								<% end %>
							</td>
						</tr>
					</table>
				</th>
			</tr>
		</table>


</div>