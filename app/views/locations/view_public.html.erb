<!-- Allow users to set the title of their page. -->

<%- title @location.bus_vendor.busName + " - Public Profile | LandSpec Pro" %>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=414610375315267";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<div class="container">
	<div id="page-content" class="page-content">

		<!-- Company and Location Name Header -->
		<div class="page-header">
			<h1><%= @location.busName %>
				<% unless @location.locName.blank? %>
					<small>
						<i class='icon-double-angle-right'></i>
						&nbsp;<%= @location.locName %>
					</small>
				<% end %>
			</h1>
		</div>


		<% unless current_user %>
			<div class="row-fluid">
				<div class="span12">
					<div class="center">
						<div class="alert alert-success">
							You can use the link above to join LandSpec Pro as a Landscaper or Landscape Supplier and view hundreds of suppliers like this and browse our growing collection of featured items for <strong>free</strong>!
						</div>
					</div>
				</div>
			</div>
		<% end %>


		<!-- Main Page Content -->
		<div>

			<div id="user-profile-1" class="user-profile row-fluid">

				<!-- LEFT SIDEBAR -->
				<div class="span4 center">

					<!-- PROFILE IMAGE, SOCIAL LINKS, AND TITLE RIBBON THING -->
					<div>

						<%= render 'locations/layouts_view_public/profileimage' %>

						<div class="space-10"></div>

						<div class="width-90 label label-info label-large arrowed-in arrowed-in-right">
							<div class="inline position-relative">
									<span class="white middle bigger-120"><%= @location.busName %></span>
									<% unless @location.locName.blank? %>
										<br/><%= @location.locName %>
									<% end %>
							</div>
						</div>

						<div class="space-10"></div>

						<div class="fb-like" data-href="<%= request.original_url %>" data-layout="button_count" data-show-faces="true" data-send="true"></div>

						<div class="g-plusone" data-size="medium" data-href="<%= request.original_url %>" data-annotation="none" style="margin:0;"></div>

						<!-- Place this tag after the last +1 button tag. -->
						<script type="text/javascript">
						  (function() {
						    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
						    po.src = 'https://apis.google.com/js/plusone.js';
						    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
						  })();
						</script>

						<a href="https://twitter.com/share" class="twitter-share-button" data-url="<%= request.original_url %>" data-text="View <%= @location.busName %> on LandSpec Pro!" data-via="landspecpro" data-related="landspecpro" style="margin:0;">Tweet</a>
						<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
						
						
						


						<% if @locsettings.show_tagline and not @location.tagline.blank? %>
							<div class="space-10"></div>
							<div style="text-align:center; font-style:oblique; padding-bottom:10px;">
								"<%= @location.tagline %>"
							</div>
						<% end %>

						<%= render 'locations/layouts_view_public/profilelinks' %>

						<div class="space-10"></div>

						<%= render 'locations/layouts_view_public/contactinfo' %>

					</div>

				</div>

				<!-- MAIN BODY -->
				<div class="span8">

					<!-- ABOUT LOCATION -->
					<% if @locsettings.show_about %>
						<%= render 'locations/layouts_view/bioinfo' %>
					<% end %>

					<!-- FEATURED ITEMS -->
					<% if @locsettings.show_featured_items %>
						<%= render 'locations/layouts_view_public/featureditems' %>
					<% end %>

					<!-- CATEGORIES -->
					<% if @locsettings.show_categories %>
						<div class="space-10"></div>
						<%= render 'locations/layouts_view/categories' %>
					<% end %>

				</div>

			</div>

		</div>

	</div>

	<%= render 'layouts/footer' %>
</div>

<script type="text/javascript">
	$(applyPopovers());
	$(applyColorbox());
</script>