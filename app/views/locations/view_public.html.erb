<div class="container">
	<div id="page-content" class="page-content">

		<!-- Company and Location Name Header -->
		<div class="page-header">
			<h1><%= @location.busName %>
				<% unless @location.locName.blank? %>
					<small>
						<i class='icon-double-angle-right'></i>
						&nbsp;<%= @location.locName %>
					</small>
				<% end %>
			</h1>
		</div>

		<!-- Main Page Content -->
		<div>

			<div id="user-profile-1" class="user-profile row-fluid">

				<div class="span4">
					<div>
						<%= render 'locations/layouts_view_public/profileimage' %>
					</div>

					<div class="fb-like" data-href="http://www.landspecpro.com/profile/ohmattnursery" data-layout="button_count" data-show-faces="true" data-send="true"></div>

				</div>

			</div>

		</div>

	</div>

	<%= render 'layouts/footer' %>
</div>

<script type="text/javascript">
	$(applyPopovers());
	$(applyColorbox());
</script>