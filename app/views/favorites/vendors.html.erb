<%= render 'layouts/sidebar' %>

	<div class="span8 offset1">
		<div class="table-header header-color-green">
			You have <%= @favlocations.count %> Favorite Suppliers
		</div>

		<table id="table_report" class="table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th class="center">Company</th>
					<th class="center">Location Name</th>
					<th class="hidden-phone center">Address</th>
					<th class="center">Favorite</th>
				</tr>
			</thead>
									
			<tbody>

				<% @favlocations.each do |l| %>
				
					<tr>
						<td class="center">
							<%= BusVendor.find(l.location.bus_vendor_id).busName %>
						</td>
						<td class="center">
							<a href=<%= locations_view_url(:id => l.location.id) %>>
								<%= l.location.locName %>
							</a>
						</td>
						<td class='hidden-phone center'>
							<%= link_to l.location.get_full_address, get_map_link_from_address(concat_address(l.location)), :target => "_blank" %>
						</td>
						<td class="center">
							<% if l.location.is_favorited(current_user) %>
								<a title="Remove from favorites" href=<%= locations_favorite_set_url(:id => l.location.id) %>><i  class="icon-bookmark" id="fav_icon"></i></a>
							<% else %>
								<a title="Add to favorites"  href=<%= locations_favorite_set_url(:id => l.location.id) %>><i  class="icon-bookmark-empty" id="fav_icon"></i></a>
							<% end %>
						</td>
					</tr>

				<% end %>

			</tbody>

		</table>
	</div>

<%= render 'layouts/sidebarend' %>
