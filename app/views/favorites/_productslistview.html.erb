<table id="table_report" class="table table-striped table-bordered table-hover">
	<thead>
		<tr>
			<th class="center">Common Name</th>
			<th class="center">Supplier</th>
			<th class="hidden-480 center">Size</th>
			<th class="hidden-480 center">Price</th>
			<th class="hidden-480 center">Image</th>
			<th class="center">Favorite</th>
		</tr>
	</thead>
							
	<tbody>

		<% @favproducts.each do |fp| %>
		
			<%  fi = fp.featured_item
				@featureditem = fi %>

			<tr>
				<td class="center">
					<a data-toggle="modal" href="<%= '#' + @featureditem.id.to_s + 'productInfoModal' %>">
						<%= fi.get_product.commonName %>
					</a>
				</td>
				<td class="center">
					<% if Location.find(fi.location_id).active %>
						<a href=<%= locations_view_url(:id => fi.location_id) %>>
							<%= Location.find(fi.location_id).busName %>
						</a>
					<% else %>
						<%= Location.find(fi.location_id).busName %>
					<% end %>
				</td>
				<td class='hidden-480 center'>
					<%= fi.size %>
				</td>
				<td class='hidden-480 center'>
					<% if fi.price.to_s != '' and fi.price != 0 %>
						<%= "$%8.2f" % fi.price.to_f %>
					<% end %>
				</td>
				<td class='hidden-480 center'>
					<%= link_to '<i class="icon-picture"></i>'.html_safe, ProductImage.find(fi.product_image_id).image.url(:original), :title => "<span style='color:#000'><strong>".html_safe + fi.get_product.commonName + "</strong></span>".html_safe, :data => {:rel => "colorbox"}, :class => 'colorbox-result' %>
				</td>
				<td class="center">
					<% if fi.is_favorited(current_user) %>
						<a title="Remove from favorites" href=<%= products_favorite_set_url(:id => fi.id) %>><i  class="icon-bookmark" id="fav_icon"></i></a>
					<% else %>
						<a title="Add to favorites"  href=<%= products_favorite_set_url(:id => fi.id) %>><i  class="icon-bookmark-empty" id="fav_icon"></i></a>
					<% end %>
				</td>
			</tr>

			<%= render 'products/productinfomodal' %>

		<% end %>

		<% @favproductsinactive.each do |fp| %>

			<% fi = fp.featured_item
				@featureditem = fi %>

			<tr>
				<td class="center">
					<%= fi.get_product.commonName %>
				</td>
				<td class="center">
					<% if Location.find(fi.location_id).active %>
						<a href=<%= locations_view_url(:id => fi.location_id) %>>
							<%= Location.find(fi.location_id).busName %>
						</a>
					<% else %>
						<%= Location.find(fi.location_id).busName %>
					<% end %>
				</td>
				<td class="hidden-480 center">
					<%= fi.size %>
				</td>
				<td class="hidden-480 center">
					<% if fi.price.to_s != '' and fi.price != 0 %>
						<%= "$%8.2f" % fi.price.to_f %>
					<% end %>
				</td>
				<td class='hidden-480 center'>
					<%= link_to '<i class="icon-picture"></i>'.html_safe, ProductImage.find(fi.product_image_id).image.url(:original), :title => "<span style='color:#000'><strong>".html_safe + fi.get_product.commonName + "</strong></span>".html_safe, :data => {:rel => "colorbox"}, :class => 'colorbox-result' %>
				</td>
				<td class="center">
					<% if fi.is_favorited(current_user) %>
						<a title="Remove from favorites" href=<%= products_favorite_set_url(:id => fi.id) %>><i  class="icon-bookmark" id="fav_icon"></i></a>
					<% else %>
						<a title="Add to favorites"  href=<%= products_favorite_set_url(:id => fi.id) %>><i  class="icon-bookmark-empty" id="fav_icon"></i></a>
					<% end %>
				</td>
			</tr>
		<% end %>


	</tbody>

</table>

<script type="text/javascript">

	$('#table_report').dataTable( {
		"aoColumns": [
			{"bSortable": true},
			{"bSortable": true},
			{"bSortable": true},
			{"bSortable": true, "bSearchable": false, "sDefaultContent": "?"},
			{"bSortable": false, "bSearchable": false},
			{"bSortable": false, "bSearchable": false}
		]
	});

</script>