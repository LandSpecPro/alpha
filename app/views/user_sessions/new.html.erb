<div class="container center">
 	<h1>Login</h1>

 		<%= form_for @user_session, :html => {:class => 'form-horizontal center inline'} do |f| %>
			<%= f.error_messages %>

      			<div class="control-group">
					<div class="control-label">
						<%= f.label "Username" %> 
					</div>
					<div class="controls">
						<%= f.text_field :login %>
					</div>
				</div>

				<div class="control-group">
					<div class="control-label">
						<%= f.label "Password" %>
					</div>
					<div class="controls">
						<%= f.password_field :password %>
					</div>
				</div>
				<div class="control-group">
      				<%= f.submit "Submit", class: "btn btn-primary" %>
      			</div>
  <% end %>
</div>