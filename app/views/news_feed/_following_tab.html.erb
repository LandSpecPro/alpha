<% @following.each do |f| %>

	<center>
		<div class="btn btn-white btn-block btn-not-clickable">
			<a href="<%= locations_view_url(:id => f.location_id) %>" style="font-size:18px;" class="tooltip-info" title="" data-original-title="View Profile" data-placement="top">
				<%= Location.find(f.location_id).busName %>
			</a> 
			<br/>
			<span class="infobox-content" style="font-size:12px;"><%= Location.find(f.location_id).locName %></span>
		</div>
	</center>

	<br/>

<% end %>