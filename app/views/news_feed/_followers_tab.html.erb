<% @followers.each do |f| %>

	<% @userfollower = User.find(f.user_id) %>

	<% if @userfollower.is_supplier
			usertype = STRING_SUPPLIER
		else
			usertype = STRING_BUYER
		end
	%>

	<center>
		<div class="btn btn-white btn-block btn-not-clickable">
			<a style="font-size:18px;" data-rel="popover" title="<%= usertype + ' Info' %>" data-placement="top" data-trigger="hover click"
					data-content="<strong>Email:</strong> <%= User.find(f.user_id).email %>">
				<% if not @userfollower.user_detail.company_name.blank? %>
					<%= @userfollower.user_detail.company_name %>
				<% else %>
					<%= @userfollower.user_detail.first_name + " " + @userfollower.user_detail.last_name %>
				<% end %>
			</a>
		</div>
	</center>

	<br/>

<% end %>